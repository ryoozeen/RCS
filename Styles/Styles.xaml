<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =====================
         기본 브러시들
    ====================== -->
    <!-- 전체 배경 그라데이션 -->
    <LinearGradientBrush x:Key="TeslaBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#161616" Offset="0"/>
        <GradientStop Color="#101010" Offset="0.5"/>
        <GradientStop Color="#1C1C1C" Offset="1"/>
    </LinearGradientBrush>

    <!-- 메인 포인트 컬러 (하늘색) -->
    <SolidColorBrush x:Key="TeslaAccent" Color="#4FC3F7"/>
    <SolidColorBrush x:Key="TeslaAccentSoft" Color="#3355B3E5"/>

    <!-- 텍스트 -->
    <SolidColorBrush x:Key="TeslaPrimaryText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TeslaSecondaryText" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="TeslaBg" Color="#111111"/>

    <!-- 유리판 같은 박스 배경 -->
    <LinearGradientBrush x:Key="TeslaBox" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#242424" Offset="0"/>
        <GradientStop Color="#181818" Offset="1"/>
    </LinearGradientBrush>

    <!-- 버튼용 글로시 브러시 -->
    <LinearGradientBrush x:Key="TeslaGlossButtonBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#3A3A3A" Offset="0"/>
        <GradientStop Color="#252525" Offset="0.5"/>
        <GradientStop Color="#181818" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TeslaGlossButtonBrushHover" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#4A4A4A" Offset="0"/>
        <GradientStop Color="#323232" Offset="0.5"/>
        <GradientStop Color="#202020" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TeslaGlossButtonBrushPressed" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2C2C2C" Offset="0"/>
        <GradientStop Color="#1A1A1A" Offset="1"/>
    </LinearGradientBrush>


    <!-- =====================
         PAGE 공통 스타일
    ====================== -->
    <Style x:Key="TeslaPage" TargetType="Page">
        <Setter Property="Background" Value="{StaticResource TeslaBackgroundBrush}"/>
        <!-- 여기서 나중에 Pretendard 같은 폰트 설치하면 교체 -->
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="{StaticResource TeslaPrimaryText}"/>
    </Style>


    <!-- =====================
         텍스트 스타일
    ====================== -->
    <Style x:Key="TeslaTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TeslaPrimaryText}"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
    </Style>

    <Style x:Key="TeslaSubText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TeslaSecondaryText}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>


    <!-- =====================
         기본 Button 글로시
    ====================== -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TeslaPrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource TeslaGlossButtonBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderBrush" Value="#555555"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="border"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  ShadowDepth="2"
                                                  Color="#000000"
                                                  Opacity="0.35"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{StaticResource TeslaGlossButtonBrushHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background"
                                    Value="{StaticResource TeslaGlossButtonBrushPressed}"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =====================
         아이콘 박스 (Controls, Status)
    ====================== -->
    <Style x:Key="TeslaIconBox" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource TeslaBox}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="15"
                                  ShadowDepth="3"
                                  Color="#000000"
                                  Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- =====================
         Toggle Switch (Valet)
    ====================== -->
    <Style x:Key="TeslaToggleSwitch" TargetType="ToggleButton">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Border x:Name="Track"
                                CornerRadius="15"
                                BorderThickness="1"
                                BorderBrush="#555">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#303030" Offset="0"/>
                                    <GradientStop Color="#181818" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <Border x:Name="Thumb"
                                Width="24" Height="24"
                                CornerRadius="12"
                                Background="#F5F5F5"
                                Margin="3"
                                HorizontalAlignment="Left">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8"
                                                  ShadowDepth="1"
                                                  Color="#000000"
                                                  Opacity="0.4"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Track" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#66B3E5" Offset="0"/>
                                        <GradientStop Color="#1E88E5" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="Track" Property="BorderBrush" Value="#2196F3"/>
                            <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Track" Property="Opacity" Value="0.4"/>
                            <Setter TargetName="Thumb" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =====================
     공통 DropShadow 효과
    ===================== -->
    <DropShadowEffect x:Key="TeslaShadow"
                  BlurRadius="18"
                  ShadowDepth="2"
                  Color="#000000"
                  Opacity="0.45"/>


</ResourceDictionary>
