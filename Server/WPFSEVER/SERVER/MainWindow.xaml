<Window x:Class="SERVER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SERVER"
        mc:Ignorable="d"
       
        Icon ="Server.ico"
        Title="SERVER"
        Height="500"
        Width="400">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="LogTextBox"
                 Grid.Row="1" 
                 Grid.Column="0" 
                 Grid.ColumnSpan="2"                 
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" />

        <Button x:Name="ServerConnect"
                Content="서버 연결" 
                HorizontalAlignment="Center" 
                Grid.Row="2"
                VerticalAlignment="Center" 
                Foreground="Green"
                FontWeight="Bold"
                Height="40" 
                Width="190"/>

        <Button x:Name="ServerShutdown"
                Content="서버 종료" 
                HorizontalAlignment="Center" 
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center" 
                Foreground="Red"
                FontWeight="Bold"
                Height="40" 
                Width="190" 
                />
        <Border x:Name="ServerStatusBar"
                BorderBrush="Red" 
                Background="Red"
                BorderThickness="1" 
                Grid.ColumnSpan="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Height="41"
                Width="380">

            <TextBlock Text="Server Stop"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Border>
        
    </Grid>
</Window>
