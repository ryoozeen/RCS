<Page x:Class="DotBotCarClient.Views.ControlsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#111111">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,20,0,20" HorizontalAlignment="Center">
            <TextBlock Text="CONTROLS"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="White"/>
        </StackPanel>



        <!-- CENTER AREA -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

            <!-- LOCK button -->
            <Button Content="LOCK"
                    x:Name="BtnLock"
                    Height="55"
                    Width="260"
                    Background="#333333"
                    Foreground="White"
                    FontSize="18"
                    BorderThickness="0"
                    Margin="0,0,0,30"
                    Click="BtnLock_Click"/>


            <!-- Circular icon buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- FLASH -->
                <Border Width="70" Height="70" CornerRadius="40"
                        Background="#222222"
                        Margin="10">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Click="BtnFlash_Click">
                        <TextBlock Text="🔦"
                                   FontSize="28"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Border>

                <!-- HONK -->
                <Border Width="70" Height="70" CornerRadius="40"
                        Background="#222222"
                        Margin="10">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Click="BtnHonk_Click">
                        <TextBlock Text="📢"
                                   FontSize="30"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Border>

                <!-- START -->
                <Border Width="70" Height="70" CornerRadius="40"
                        Background="#222222"
                        Margin="10">
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Click="BtnStart_Click">
                        <TextBlock Text="⏻"
                                   FontSize="32"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Border>

            </StackPanel>


            <!-- Valet Mode -->
            <StackPanel Margin="0,40,0,20" HorizontalAlignment="Center">

                <TextBlock Text="VALET MODE"
                           FontSize="18"
                           Foreground="#CCCCCC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <ToggleButton x:Name="ToggleValet"
                              Width="60"
                              Height="30"
                              BorderThickness="0"
                              Background="#444"
                              Foreground="White"
                              Checked="ToggleValet_Checked"
                              Unchecked="ToggleValet_Unchecked">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="SwitchBorder"
                                    Width="60" Height="30"
                                    Background="#333"
                                    CornerRadius="15">
                                <Grid>
                                    <Ellipse x:Name="SwitchThumb"
                                             Width="24" Height="24"
                                             Fill="White"
                                             Margin="3,3,33,3"/>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <!-- ON -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="SwitchBorder" Property="Background" Value="#0CE65C"/>
                                    <Setter TargetName="SwitchThumb" Property="Margin" Value="33,3,3,3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

            </StackPanel>

        </StackPanel>



        <!-- FOOTER BACK BUTTON -->
        <StackPanel Grid.Row="2" Margin="0,20,0,20">
            <Button Content="BACK"
                    Click="GoBack"
                    Height="55"
                    Background="#222222"
                    Foreground="White"
                    FontSize="20"
                    BorderThickness="0"/>
        </StackPanel>

    </Grid>
</Page>
