<Page x:Class="DotBotCarClient.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Style="{StaticResource TeslaPage}"
      Title="LoginPage">

    <Grid x:Name="RootGrid">

        <Grid.RenderTransform>
            <TranslateTransform X="40"/>
        </Grid.RenderTransform>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:0.4"/>
                        <DoubleAnimation Storyboard.TargetProperty="(Grid.RenderTransform).(TranslateTransform.X)"
                                         From="40" To="0" Duration="0:0:0.4"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1"
                Background="{StaticResource TeslaBox}"
                CornerRadius="20"
                Padding="30"
                Width="380"
                Effect="{StaticResource TeslaShadow}">

            <StackPanel>
                
                <TextBlock Text="Tesla Mobile App"
                           Style="{StaticResource TeslaTitle}"
                           FontSize="30"/>

                <TextBlock Text="로그인하여 차량을 제어하세요."
                           Style="{StaticResource TeslaSubText}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="아이디"/>
                <TextBox x:Name="txtLoginId"
                         Height="40"
                         Padding="10"
                         Background="#222"
                         BorderBrush="#444"
                         Foreground="White"
                         Margin="0,0,0,12"/>

                <TextBlock Text="비밀번호"/>
                <PasswordBox x:Name="pwLogin"
                             Height="40"
                             Padding="10"
                             Background="#222"
                             BorderBrush="#444"
                             Foreground="White"
                             Margin="0,0,0,20"/>

                <Button x:Name="BtnLogin"
                        Content="로그인"
                        Height="42"
                        Click="BtnLogin_Click"
                        Margin="0,0,0,10"/>

                <Button x:Name="BtnEnroll"
                        Content="회원가입"
                        Height="40"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="{StaticResource TeslaAccent}"
                        Click="BtnEnroll_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>
