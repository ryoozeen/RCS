<Page x:Class="DotBotCarClient.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Style="{StaticResource TeslaPage}"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0, 80, 0, 40">
            <TextBlock Text="Tesla Mobile App" Style="{StaticResource TeslaTitle}" Margin="0,0,0,5"/>
            <TextBlock Text="차량 제어를 위해 로그인하세요" Style="{StaticResource TeslaSubText}"/>
        </StackPanel>

        <StackPanel Width="300" VerticalAlignment="Top" Margin="-7,182,7,0" Grid.RowSpan="2">
            <TextBox Tag="아이디" Style="{StaticResource {x:Type TextBox}}" />

            <PasswordBox Tag="비밀번호" Height="45" FontSize="16"
                         Foreground="{StaticResource TeslaPrimaryText}" Margin="0,8"
                         Template="{StaticResource PasswordBoxTemplate}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="30, 0, 30, 40">
            <Button x:Name="BtnLogin"
                    Content="로그인"
                    Click="BtnLogin_Click"
                    Background="{StaticResource TeslaAccent}"
                    Foreground="{StaticResource TeslaBg}"
                    Margin="0, 20">
            </Button>

            <Button x:Name="BtnEnroll"
                    Content="회원가입"
                    Click="BtnEnroll_Click"
                    Background="{StaticResource TeslaBox}"
                    Foreground="{StaticResource TeslaSecondaryText}"/>
        </StackPanel>
    </Grid>
</Page>