<Page x:Class="DotBotCarClient.Views.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Style="{StaticResource TeslaPage}"
      Title="StatusPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0, 40, 0, 0">
            <TextBlock Text="My Model S" Style="{StaticResource TeslaTitle}" Margin="0,0,0,5"/>
            <TextBlock x:Name="CarStateText" Text="차량 상태 : 대기 중" Style="{StaticResource TeslaSubText}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 20">
                <TextBlock Text="🔋" FontSize="20" VerticalAlignment="Center"/>
                <TextBlock x:Name="BatteryText" Text=" 70%" FontSize="20" FontWeight="SemiBold"
                           Foreground="{StaticResource TeslaAccent}" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <Image 
               Source="/Assets/car.png"  Stretch="Uniform" 
               Margin="20,57,20,123" Grid.RowSpan="2"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 50">
            <Border Style="{StaticResource TeslaIconBox}">
                <Button x:Name="StartBtn" Click="start_Click" Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="⚡" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Start" FontSize="12" Foreground="{StaticResource TeslaSecondaryText}"/>
                    </StackPanel>
                </Button>
            </Border>

            <Border Style="{StaticResource TeslaIconBox}">
                <Button x:Name="LockBtn" Click="Lock_Click" Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="🔒" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Lock" FontSize="12" Foreground="{StaticResource TeslaSecondaryText}"/>
                    </StackPanel>
                </Button>
            </Border>

            <Border Style="{StaticResource TeslaIconBox}">
                <Button x:Name="TrunkBtn" Click="Trunk_Click" Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel>
                        <TextBlock Text="📦" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Trunk" FontSize="12" Foreground="{StaticResource TeslaSecondaryText}"/>
                    </StackPanel>
                </Button>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2" Height="60" Background="{StaticResource TeslaBox}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="⚡ Charging" Click="GoCharging"
                    Background="Transparent" BorderThickness="0" Foreground="{StaticResource TeslaAccent}"/>

            <Button Grid.Column="1" Content="⚙️ Controls" Click="GoControls"
                    Background="Transparent" BorderThickness="0" Foreground="{StaticResource TeslaPrimaryText}"/>
        </Grid>
    </Grid>
</Page>