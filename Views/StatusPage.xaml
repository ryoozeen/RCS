<Page x:Class="DotBotCarClient.Views.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#111111">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- HEADER + CAR STATUS -->
        <StackPanel Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center">

            <TextBlock Text="My Model S"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">

                <!-- 배터리 아이콘 -->
                <Border Width="25" Height="15" CornerRadius="3"
                        Background="#0CE65C"/>

                <!-- 배터리 퍼센트 -->
                <TextBlock x:Name="BatteryText"
                           Text=" 100%"
                           FontSize="18"
                           Foreground="White"
                           Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 차량 상태 -->
            <TextBlock x:Name="CarStateText"
                       Text="차량 상태 : 주차중"
                       FontSize="16"
                       Foreground="#BBBBBB"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>

            <!-- 차량 이미지 -->
            <Image Source="/Assets/car.png"
                   Width="260"
                   Opacity="0.93"
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"/>
        </StackPanel>




        <!-- CONTROL ICONS (에어컨, 문잠금, 트렁크) -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,25,0,0">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <!-- Air -->
                <Border Width="70" Height="70"
                        Background="#222222"
                        CornerRadius="40"
                        Margin="10">
                    <Button Background="Transparent" BorderThickness="0"
                            Click="AirBtn_Click">
                        <TextBlock Text="❄"
                                   FontSize="32"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Border>

                <!-- Door Lock -->
                <Border Width="70" Height="70"
                        Background="#222222"
                        CornerRadius="40"
                        Margin="10">
                    <Button Background="Transparent" BorderThickness="0"
                            Click="LockBtn_Click">
                        <TextBlock Text="🔒"
                                   FontSize="30"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Border>

                <!-- Trunk -->
                <Border Width="70" Height="70"
                        Background="#222222"
                        CornerRadius="40"
                        Margin="10">
                    <Button Background="Transparent" BorderThickness="0"
                            Click="TrunkBtn_Click">
                        <TextBlock Text="🧳"
                                   FontSize="30"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Border>

            </StackPanel>

        </StackPanel>



        <!-- FOOTER BUTTONS -->
        <StackPanel Grid.Row="2" Margin="0,20,0,20">

            <Button Content="CHARGING"
                    Click="GoCharging"
                    Height="55"
                    FontSize="20"
                    Background="#333333"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,0,12"/>

            <Button Content="CONTROLS"
                    Click="GoControls"
                    Height="55"
                    FontSize="20"
                    Background="#222222"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>

    </Grid>
</Page>
