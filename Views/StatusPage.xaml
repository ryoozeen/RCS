<Page x:Class="DotBotCarClient.Views.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#111111">

    <!-- ============================ -->
    <!--     🔶  Resources 영역      -->
    <!-- ============================ -->
    <Page.Resources>

        <!-- 원형 아이콘 버튼 스타일 (Status 전용) -->
        <Style x:Key="StatusRoundIconButton" TargetType="Button">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Circle"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="45"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}" />

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Circle" Property="Background" Value="#333333"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Circle" Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

    </Page.Resources>



    <!-- ============================ -->
    <!--          🔶 Layout           -->
    <!-- ============================ -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================ -->
        <!--          HEADER            -->
        <!-- ============================ -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,15,0,10">

            <TextBlock Text="My Model S"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <!-- 배터리 표시 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Border Width="28" Height="16" Background="#4CAF50" CornerRadius="3"/>
                <TextBlock x:Name="BatteryText"
                           Text=" 60%"
                           Foreground="White"
                           FontSize="18"
                           Margin="5,0,0,0"/>
            </StackPanel>

            <!-- 차량 상태 -->
            <TextBlock x:Name="CarStateText"
                       Text="차량 상태 : 주차중"
                       FontSize="16"
                       Foreground="#CCCCCC"
                       Margin="0,15,0,0"/>
        </StackPanel>


        <!-- ============================ -->
        <!--      CAR IMAGE + ICONS       -->
        <!-- ============================ -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">

            <!-- 차량 이미지 -->
            <Image Source="/Assets/car.png"
                   Width="280" Height="130"
                   Margin="0,10"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- ICON 3개 -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,35,0,0">

                <!-- POWER -->
                <Button Style="{StaticResource StatusRoundIconButton}"
                        Margin="10"
                        Click="start_Click">
                    <Image Source="/Assets/start.png" Width="42"/>
                </Button>

                <!-- LOCK -->
                <Button Style="{StaticResource StatusRoundIconButton}"
                        Margin="10"
                        Click="Lock_Click">
                    <Image Source="/Assets/lock.png" Width="42"/>
                </Button>

                <!-- TRUNK -->
                <Button Style="{StaticResource StatusRoundIconButton}"
                        Margin="10"
                        Click="Trunk_Click">
                    <Image Source="/Assets/trunk.png" Width="42"/>
                </Button>

            </StackPanel>

        </StackPanel>


        <!-- ============================ -->
        <!--         FOOTER BUTTONS       -->
        <!-- ============================ -->
        <StackPanel Grid.Row="2" Margin="0,20,0,15">

            <!-- CHARGING -->
            <Border Height="55" Background="#333333" CornerRadius="10"
                    MouseDown="GoCharging">
                <TextBlock Text="CHARGING"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"/>
            </Border>

            <!-- CONTROLS -->
            <Border Height="55" Background="#222222" CornerRadius="10"
                    Margin="0,12,0,0"
                    MouseDown="GoControls">
                <TextBlock Text="CONTROLS"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"/>
            </Border>

        </StackPanel>

    </Grid>

</Page>
