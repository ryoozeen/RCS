<Page x:Class="DotBotCarClient.Views.ChargingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Style="{StaticResource TeslaPage}"
      Title="ChargingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20, 20, 20, 0">
            <Button x:Name="GoBackBtn" Click="GoBack_Click" HorizontalAlignment="Left"
                    Background="Transparent" BorderThickness="0" Width="40" Height="40">
                <TextBlock Text="&lt;" FontSize="24" Foreground="{StaticResource TeslaSecondaryText}"/>
            </Button>
            <TextBlock Text="CHARGING" Style="{StaticResource TeslaTitle}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <TextBlock x:Name="ChargeTimeText" Text="1 hr 5 min remaining" 
                       Style="{StaticResource TeslaSubText}" 
                       FontSize="20"
                       Margin="0, 0, 0, 40"/>

            <Border x:Name="BatteryBorder" Width="300" Height="150" CornerRadius="15" BorderThickness="5"
                    BorderBrush="{StaticResource TeslaSecondaryText}" HorizontalAlignment="Center" Margin="0, 0, 0, 20">

                <Grid Margin="3">
                    <Border x:Name="BatteryFill" HorizontalAlignment="Left" Background="{StaticResource TeslaAccent}"
                            CornerRadius="10" Width="0"/>
                    <TextBlock Text="⚡" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TeslaBg}"/>
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 20, 0, 20">
                <TextBlock Text="⚡" FontSize="18" Foreground="{StaticResource TeslaPrimaryText}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="ChargingRateText" Text="62 mi/hr" Style="{StaticResource TeslaSubText}" FontSize="16" Margin="0,0,15,0"/>
                <TextBlock x:Name="VoltageText" Text="220 V" Style="{StaticResource TeslaSubText}" FontSize="16" Margin="0,0,15,0"/>
                <TextBlock x:Name="AmperageText" Text="80/80 A" Style="{StaticResource TeslaSubText}" FontSize="16"/>
            </StackPanel>

            <StackPanel Margin="0, 15, 0, 15" HorizontalAlignment="Center">
                <TextBlock x:Name="BatteryPercentText" Text="Battery: 60%" Style="{StaticResource TeslaTitle}" FontSize="24" Margin="0, 0, 0, 5"/>
                <TextBlock x:Name="DriveRangeText" Text="주행 가능 거리: 240 km" Style="{StaticResource TeslaSubText}"/>
            </StackPanel>

            <TextBlock x:Name="ChargeStatusText" Text="충전 중…" Style="{StaticResource TeslaSubText}" Foreground="{StaticResource TeslaAccent}" FontSize="18"/>

        </StackPanel>

        <StackPanel Grid.Row="2" Margin="30, 20, 30, 40">
            <Button x:Name="StopChargingBtn" Content="STOP CHARGING" Click="StopCharging_Click"
                    Background="{StaticResource TeslaAccent}" Foreground="{StaticResource TeslaBg}" Margin="0"/>
        </StackPanel>
    </Grid>
</Page>