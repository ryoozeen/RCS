<Page x:Class="DotBotCarClient.Views.ChargingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#111111">
    <!-- 전체 배경 검정 -->

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,20,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Charging"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="1 hr 5 min remaining"
                       FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
        </StackPanel>



        <!-- CENTER CONTENT -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <!-- 충전 상태 -->
            <TextBlock x:Name="ChargeStatusText"
                       Text=""
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#0CE65C"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>


            <!-- Battery Bar -->
            <Border Width="260"
                    Height="40"
                    Background="#333333"
                    CornerRadius="8"
                    Padding="3"
                    Margin="0,0,0,5">

                <Border x:Name="BatteryFill"
                        Width="0"
                        Background="#0CE65C"
                        CornerRadius="6"
                        HorizontalAlignment="Left"/>
            </Border>


            <!-- Battery Percent -->
            <TextBlock x:Name="BatteryPercentText"
                       Text="Battery: 0%"
                       FontSize="16"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,20"/>



            <!-- 전력 정보 -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,5">

                <TextBlock Text="⚡"
                           FontSize="22"
                           Margin="0,0,10,0"
                           Foreground="#0CE65C"/>

                <TextBlock Text="62 mi/hr    220 V    80/80 A"
                           FontSize="16"
                           Foreground="#CCCCCC"
                           FontWeight="SemiBold"/>
            </StackPanel>


            <!-- 주행 가능 거리 -->
            <TextBlock x:Name="DriveRangeText"
                       Text="주행 가능 거리: 240 km"
                       FontSize="16"
                       Foreground="#BBBBBB"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>



        <!-- FOOTER BUTTONS -->
        <StackPanel Grid.Row="2" Margin="0,20,0,20">

            <Button Content="STOP CHARGING"
                    Height="55"
                    FontSize="20"
                    Background="#333333"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="0,0,0,10"
                    Click="StopCharging_Click"/>

            <Button Content="BACK"
                    Height="50"
                    FontSize="18"
                    Background="#222222"
                    Foreground="White"
                    BorderThickness="0"
                    Click="GoBack_Click"/>
        </StackPanel>

    </Grid>
</Page>
