<Page x:Class="DotBotCarClient.Views.EnrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#111">

    <Grid Margin="40">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="360">

            <!-- Title -->
            <TextBlock Text="회원가입"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0 0 0 20"
                       HorizontalAlignment="Center"/>

            <!-- ID -->
            <TextBlock Text="아이디" Foreground="White" FontSize="14" Margin="0 5 0 2" Width="285"/>
            <TextBox x:Name="txtId"
                     Height="42"
                     FontSize="15"
                     Padding="10"
                     Background="#222"
                     Foreground="White"
                     BorderBrush="#444"
                     BorderThickness="1"
                     Margin="0 0 0 10" Width="284"/>

            <!-- Name -->
            <TextBlock Text="이름" Foreground="White" FontSize="14" Margin="0 5 0 2" Width="278"/>
            <TextBox x:Name="txtName"
                     Height="42"
                     FontSize="15"
                     Padding="10"
                     Background="#222"
                     Foreground="White"
                     BorderBrush="#444"
                     BorderThickness="1"
                     Margin="0 0 0 10" Width="280"/>

            <!-- PW -->
            <TextBlock Text="비밀번호" Foreground="White" FontSize="14" Margin="0 5 0 2" Width="271"/>
            <PasswordBox x:Name="pwBox"
                         Height="42"
                         FontSize="15"
                         Padding="10"
                         Background="#222"
                         Foreground="White"
                         BorderBrush="#444"
                         BorderThickness="1"
                         Margin="0 0 0 10" Width="274"/>

            <!-- PW Confirm -->
            <TextBlock Text="비밀번호 확인" Foreground="White" FontSize="14" Margin="0 5 0 2" Width="270"/>
            <PasswordBox x:Name="pwConfirmBox"
                         Height="42"
                         FontSize="15"
                         Padding="10"
                         Background="#222"
                         Foreground="White"
                         BorderBrush="#444"
                         BorderThickness="1"
                         Margin="0 0 0 20" Width="271"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button x:Name="BtnEnrollOk"
                        Content="회원가입"
                        Width="150" Height="42"
                        Margin="0 0 8 0"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnEnrollOk_Click"/>

                <Button x:Name="BtnCancel"
                        Content="취소"
                        Width="150" Height="42"
                        Background="#333"
                        Foreground="White"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>

</Page>
